	"type": "module",
	"devDependencies": {
		"jest": "^30.0.5",
		"vest": "^5.4.6",
		"vitest": "^3.2.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CLDMV/slothlet.git"
	},
	"bugs": {
