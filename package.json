{
	"name": "@cldmv/slothlet",
	"version": "2.0.0",
	"moduleVersions": {
		"lazy": "1.0.0",
		"eager": "1.0.0"
	},
	"description": "Slothlet: Lazy Modular API Loader for Node.js. Lazy mode dynamically loads API modules and submodules only when accessed, supporting both lazy and eager loading.",
	"main": "./index.cjs",
	"module": "./index.mjs",
	"exports": {
		".": {
			"types": "./types/dist/slothlet.d.mts",
			"import": "./index.mjs",
			"require": "./index.cjs"
		}
	},
	"types": "./types/dist/slothlet.d.mts",
	"directories": {
		"test": "tests"
	},
	"scripts": {
		"publish": "npm publish --access public",
		"test": "vitest --config .configs/vitest.config.mjs run",
		"debug": "node tests/debug-slothlet.mjs",
		"test:entry": "node tests/test-entry-points.mjs",
		"test:cjs": "node tests/test-cjs-entry.cjs",
		"test:esm": "node tests/test-esm-entry.mjs",
		"test:performance": "node tests/performance-benchmark.mjs",
		"lint": "eslint --config .configs/eslint.config.mjs .",
		"build": "npm run build:cleanup && npm run build:dist && npm run build:types && npm run build:docs && npm run build:prepend-license",
		"build:cleanup": "shx rm -rf types && shx rm -rf dist",
		"build:dist": "shx cp -r src dist",
		"build:types": "tsc -p .configs/tsconfig.dts.jsonc",
		"build:docs": "jsdoc2md -c .configs/jsdoc.config.json --separators -m none -g none \"src/slothlet.mjs\" \"src/lib/modes/**/*.mjs\" > docs/API.md",
		"build:prepend-license": "node tools/prepend-license.mjs dist"
	},
	"keywords": [
		"api",
		"lazy-loading",
		"eager-loading",
		"modular",
		"nodejs",
		"esm",
		"cjs",
		"module-loader",
		"proxy",
		"performance",
		"live-binding",
		"dynamic-import",
		"vm",
		"worker",
		"child-process",
		"framework",
		"api-management",
		"deferred-loading",
		"optimization"
	],
	"author": {
		"name": "Shinrai",
		"company": "CLDMV",
		"email": "git+npm@cldmv.net",
		"url": "https://cldmv.net"
	},
	"contributors": [
		{
			"name": "CLDMV",
			"url": "https://github.com/CLDMV"
		}
	],
	"license": "Apache-2.0",
	"type": "module",
	"devDependencies": {
		"@eslint/css": "^0.10.0",
		"@eslint/js": "^9.33.0",
		"@eslint/json": "^0.13.1",
		"@eslint/markdown": "^7.2.0",
		"@html-eslint/eslint-plugin": "^0.45.0",
		"@html-eslint/parser": "^0.45.0",
		"eslint": "^9.33.0",
		"eslint-plugin-yml": "^1.18.0",
		"jsonc-parser": "^3.3.1",
		"shx": "^0.4.0",
		"typescript": "^5.9.2",
		"vest": "^5.4.6",
		"vitest": "^3.2.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/CLDMV/slothlet.git"
	},
	"bugs": {
		"url": "https://github.com/CLDMV/slothlet/issues"
	},
	"homepage": "https://github.com/CLDMV/slothlet#readme",
	"publishConfig": {
		"access": "public"
	},
	"files": [
		"index.mjs",
		"index.cjs",
		"README.md",
		"LICENSE",
		"types/dist/",
		"types/index.d.mts",
		"types/index.d.mts.map",
		"dist/"
	],
	"sideEffects": false
}
