{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationMap": true, // helpful for IDEs
		"outDir": ".././types",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2022",
		"skipLibCheck": true,
		"stripInternal": true // hides /** @internal */ if you use it
	},
	"include": ["../**/*.js", "../**/*.mjs", "../**/*.d.ts"],
	"exclude": [
		"../api_test",
		"../tests",
		"../tools",
		"../types",
		"../.config",
		"../.configs",
		"../.data",
		// "../dist",
		"../build",
		"../docs",
		"../node_modules",
		"../**/* copy.mjs", // exactly "… copy.mjs"
		"../**/* copy*.mjs" // matches "… copy 3.mjs", "… copy whatever.mjs"
	]
}
